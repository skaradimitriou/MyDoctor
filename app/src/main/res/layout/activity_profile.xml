<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_bg"
    android:padding="@dimen/dimen_16"
    tools:context=".features.profile.ProfileActivity">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_user_img"
        android:layout_width="@dimen/dimen_60"
        android:layout_height="@dimen/dimen_60"
        android:contentDescription="@string/app_name"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/profile_user_name"
        style="@style/text_h3_dark"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="@dimen/dimen_10"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/profile_user_img"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Stathis Karadimitriou" />

    <ImageView
        android:id="@+id/mail_icon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginTop="@dimen/dimen_10"
        android:src="@mipmap/ic_launcher"
        app:layout_constraintStart_toStartOf="@id/profile_user_img"
        app:layout_constraintTop_toBottomOf="@id/profile_user_img" />

    <TextView
        android:id="@+id/user_email"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/dimen_10"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/mail_icon"
        app:layout_constraintTop_toTopOf="@id/mail_icon"
        tools:text="test.testopoulos@gmail.com" />

    <ImageView
        android:id="@+id/telephone_icon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginTop="@dimen/dimen_10"
        android:src="@mipmap/ic_launcher"
        app:layout_constraintStart_toStartOf="@id/mail_icon"
        app:layout_constraintTop_toBottomOf="@id/mail_icon" />

    <TextView
        android:id="@+id/user_telephone"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/dimen_10"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/telephone_icon"
        app:layout_constraintTop_toTopOf="@id/telephone_icon"
        tools:text="test.testopoulos@gmail.com" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/profile_logout_btn"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:backgroundTint="@color/white"
        android:text="Log out"
        android:textAllCaps="false"
        android:textColor="#ff0000"
        app:icon="@drawable/ic_power_button"
        app:iconTint="#ff0000"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>