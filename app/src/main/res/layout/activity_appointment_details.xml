<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_bg"
    android:padding="@dimen/dimen_16"
    tools:context=".features.appointment_details.AppointmentDetailsActivity">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/appointment_img"
        android:layout_width="@dimen/dimen_80"
        android:layout_height="@dimen/dimen_80"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/doctor_name"
        style="@style/text_h2_dark"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimen_10"
        app:layout_constraintStart_toEndOf="@id/appointment_img"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Dr. Giannis Markopoulos" />

    <TextView
        android:id="@+id/doctor_category"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/doctor_name"
        app:layout_constraintTop_toBottomOf="@id/doctor_name"
        android:text="Dermatologist" />

    <ImageButton
        android:id="@+id/doctor_msg_btn"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="@dimen/dimen_5"
        app:layout_constraintStart_toStartOf="@id/doctor_category"
        app:layout_constraintTop_toBottomOf="@id/doctor_category" />

    <ImageButton
        android:id="@+id/doctor_call_btn"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="@dimen/dimen_10"
        app:layout_constraintStart_toEndOf="@id/doctor_msg_btn"
        app:layout_constraintTop_toTopOf="@id/doctor_msg_btn" />

    <Button
        android:id="@+id/video_call"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_16"
        android:backgroundTint="@color/light_blue"
        android:text="Start a video call"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/appointment_img" />

    <Button
        android:id="@+id/reschedule_btn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/dimen_5"
        android:backgroundTint="@color/ocean_blue"
        android:text="Reschedule"
        app:layout_constraintEnd_toStartOf="@id/cancel_btn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/video_call" />

    <Button
        android:id="@+id/cancel_btn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimen_5"
        android:backgroundTint="#70ff0000"
        android:text="Cancel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/reschedule_btn"
        app:layout_constraintTop_toBottomOf="@id/video_call" />

    <TextView
        android:id="@+id/details"
        style="@style/text_h3_dark"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/dimen_10"
        android:paddingBottom="@dimen/dimen_10"
        android:text="Details"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/reschedule_btn" />

    <include
        android:id="@+id/appointment_date"
        layout="@layout/appointment_card_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/details" />

    <include
        android:id="@+id/appointment_location"
        layout="@layout/appointment_card_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_10"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/appointment_date" />

    <include
        android:id="@+id/appointment_reason"
        layout="@layout/appointment_card_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_10"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/appointment_location" />

    <include
        android:id="@+id/appointment_price"
        layout="@layout/appointment_card_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_10"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/appointment_reason" />

</androidx.constraintlayout.widget.ConstraintLayout>