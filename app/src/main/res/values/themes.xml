<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MyDoctor" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:windowAnimationStyle">@style/DoctorAnimationStyle</item>
    </style>

    <style name="DoctorAnimationStyle" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">
            @anim/slide_in_right
        </item>
        <item name="android:activityOpenExitAnimation">
            @anim/slide_out_left
        </item>
        <item name="android:activityCloseEnterAnimation">
            @anim/slide_in_left
        </item>
        <item name="android:activityCloseExitAnimation">
            @anim/slide_out_right
        </item>
    </style>

    <!-- Text Stylings -->

    <style name="text_h2_dark" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="text_h3" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="text_h3_dark" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="text_h4_dark" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!--  Buttons -->
    <style name="button_white_profile" parent="Widget.AppCompat.TextView">
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:layout_margin">@dimen/dimen_16</item>
        <item name="textAllCaps">false</item>
        <item name="android:textColor">@color/red</item>
        <item name="iconTint">@color/red</item>
    </style>

    <style name="button_edit_profile" parent="Widget.AppCompat.TextView">
        <item name="android:backgroundTint">@color/ocean_blue</item>
        <item name="android:layout_margin">@dimen/dimen_16</item>
        <item name="textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="iconTint">@color/white</item>
    </style>

    <style name="BottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/BottomSheetStyle</item>
    </style>

    <style name="BottomSheetStyle" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="upload_dialog_options" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">16sp</item>
        <item name="android:clickable">true</item>
        <item name="android:padding">@dimen/dimen_16</item>
        <item name="android:drawablePadding">@dimen/dimen_16</item>
    </style>

    <style name="shimmer_text" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/shimmer_grey</item>
        <item name="android:text">@string/app_name</item>
        <item name="android:background">@color/shimmer_grey</item>
    </style>

</resources>